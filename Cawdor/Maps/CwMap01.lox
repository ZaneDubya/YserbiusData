fun MapEvent38(macros) {
    if ((macros.GetFlag(DUNGEON, MACBETHREWARD) == 0) && (macros.GetFlag(DUNGEON, WONGAME) == 0)) {
        macros.ShowText("The doors refuse to budge.");
    }
    else {
        if (macros.PartyCount > 1) {
            macros.ShowText("These narrow stairs will force you to descend single file.");
        }
        else {
            macros.ShowText("Whoever last passed these doors did not pull them to.  You carefully make sure they stay ajar as you pass.  They lead to stairs descending into darkness.");
            if (((macros.HasItem(ALDHELMSSTAFF)) && (macros.HasItem(ALDHELMSGAUNTLETS)) && (macros.HasItem(ALDHELMSHARP)) && (macros.GetFlag(DUNGEON, ALDHELMPROPHECY) == 1)) || (macros.GetFlag(DUNGEON, ALDHELMBLESSING) == 1)) {
                macros.ShowText("A beatific figure, old, wise, and happy, appears before you.");
                macros.ShowText("'I am Aldhelm.  Long have I hoped to aid one of good heart in ridding this earth of the canker of the Wyrd Sisters.");
                macros.ShowText("There is a secret path, somewhat safer, that will lead thee to thy goal.  It will bypass many fiercesome beasts set here to sap thy will and vigor.  Take it, and my blessing.'");
                if (!(macros.HasItem(LANTERN))) {
                    macros.GiveItem(LANTERN);
                }
                macros.SetFlag(DUNGEON, ALDHELMBLESSING, 1);
                macros.Teleport(10, 2, 0, EAST);
            }
            else {
                macros.Teleport(10, 2, 16, EAST);
            }
        }
    }
}

