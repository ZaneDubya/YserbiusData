fun MapEvent40(macros) {
    if (macros.GetFlag(DUNGEON, HEARDJOKE1) == 0) {
        macros.SetFlag(DUNGEON, HEARDJOKE1, 1);
        macros.ShowPicture(DRAGON);
        macros.ShowText("*");
        macros.ShowText("*");
        macros.ShowText("*");
        macros.ShowText("By all the fins and feathers!  An enormous red dragon rears up and speaks to you.");
        if ((macros.GetFlag(DUNGEON, HEARDJOKE4) == 0) && (macros.GetFlag(DUNGEON, HEARDJOKE2) == 0) && (macros.GetFlag(DUNGEON, HEARDJOKE3) == 0)) {
            macros.ShowText("'Hmm.  There are two ways this could go.  We could have similar senses of humor, and part friends, or I could just eat thee.  So.  Wouldst hear a joke about a stupid green dragon named Gwalter the Dim?'");
        }
        else {
            macros.ShowText("'Ah!  I remember thee.  As I recall, thou didst enjoy my last joke.  Wouldst thou hear another?'");
        }
        macros.ShowText("You quickly nod.");
        macros.ShowText("'There was a very stupid green dragon named Gwalter the Dim.  Do not laugh yet!  One day Gwalter received three wishes from a djinn.  For his first wish he asked for a bag that would always be full of gold, no matter how much he removed.  Lo and behold!  His wish was granted.");
        macros.ShowText("The genie asked what he wanted for his other wishes.  Gwalter asked for two more of those bags.  Get it?'");
        macros.ShowText("You laugh politely.");
        macros.ShowText("'Good enough.  But remember; 'tis only the green drakes that exhibit such stupidity.  I shall remember thee.'");
        macros.ShowText("The dragon departs.");
    }
}

fun MapEvent41(macros) {
    if (macros.GetFlag(PARTY, PIGFOOT) == 0) {
        macros.SetFlag(PARTY, PIGFOOT, 1);
        macros.ShowPicture(HALFLINGCLERIC);
        macros.ShowText("A halfling cleric approaches you surreptitiously.");
        macros.ShowText("'Psst!  Cuz!  Thou dost look like a being of wit and wisdom.  I will gladly share with thee a great secret.'");
        macros.ShowText("He opens his coat to show, pinned to the inside, a slightly turned pig's foot.");
        macros.ShowText("'This is the Lucky Pig's Foot.  It is the sovereign against dragons, for wyrms cannot abide the smell of burnt pig's foot.  Thou needst only to brandish it boldly before thee in battle....'");
        macros.ShowText("His voice trails off as he sees someone approaching, waving another lucky pig's foot.  'Anon!'");
    }
}
