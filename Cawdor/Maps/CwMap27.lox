fun MapEvent05(macros) {
    var i;
    i = 0;
    var k;
    k = 0;
    i = macros.GetFlag(PARTY, CTR);
    i++;
    k = i;
    if (k > 19) {
        k = (k - 20);
    }
    if (k > 14) {
        k = (k - 15);
    }
    if (k > 9) {
        k = (k - 10);
    }
    if (k > 4) {
        k = (k - 5);
    }
    if (k < 0) {
        k = 0;
    }
    if (k > 29) {
        k = 0;
    }
    if (i > 30) {
        i = 0;
    }
    macros.SetFlag(PARTY, CTR, i);
    if ((i == 26) | (i == 20) | (i == 14) | (i == 8) | (i == 2)) {
        switch (k) {
            case 0:
                macros.ShowText("You hear some footsteps running away.");
                break;
            case 1:
                macros.ShowText("You hear someone strolling towards you.");
                macros.ShowPicture(GREMLINWIZARD);
                macros.ShowText("The gremlin greets you heartily.");
                macros.ShowText("'I just received the strangest prophecy in Astrologia.  But I think I see through some of it.  The deadly herbs are in Althea's demesne.  I should go look her up.'");
                macros.ShowText("She remains standing there, lost in thought.");
                break;
            case 2:
                macros.ShowPicture(DRAGON);
                if (macros.GetFlag(DUNGEON, HEARDJOKE7) == 0) {
                    macros.ShowText("The dragon examines you with a hint of recognition.");
                    macros.ShowText("'Ah!  Whither hast thou been? I have heard yet another green dragon joke, and my thoughts turned to thee.  Wouldst hear it?'");
                    macros.ShowText("You nod.  Or is it more of a shrug?");
                    macros.ShowText("'Why is a green dragon's head like the lower left store room in here?'");
                    macros.ShowText("You ask why.");
                    macros.ShowText("'They're both filled with large round hard useless objects!'");
                    macros.ShowText("'Aren't they both filled with rocks?' you ask politely.");
                    macros.ShowText("'That too!'  The dragon falls over, laughing uncontrollably.  You would shake your head, but prudence dictates a quiet retreat.");
                    macros.SetFlag(DUNGEON, HEARDJOKE7, 1);
                }
                else {
                    macros.ShowText("'Ah, my friend!  Look not so worried.  I am sure I will hear or devise another green dragon joke before long!'");
                    macros.ShowText("It wouldn't do to say this, but the prospect of yet another dragon joke is why you looked so worried.");
                }
                break;
            case 3:
                macros.ShowPicture(HALFLINGKNIGHT);
                macros.ShowText("A downtrodden halfling knight ambles aimlessly by you.");
                macros.ShowText("'Serves me right to expect anything cobbled together from horseshoes to bear my weight,' she mutters as she passes.");
                break;
            case 4:
                macros.ShowText("A boisterous band of burglars decides, reasonably, that they are bigger than you are.");
                macros.SetBooty(LARGELETTEROFCREDIT, WOADWINE, 0, 0, 0, 1193);
                macros.GetMonster(1, 25);
                if (macros.PartyCount > 1) {
                    macros.GetMonster(5, 25);
                }
                if (macros.PartyCount > 2) {
                    macros.GetMonster(2, 25);
                    macros.GetMonster(6, 25);
                }
                break;
        }
    }
}

