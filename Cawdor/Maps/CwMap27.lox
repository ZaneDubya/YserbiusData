fun MapEvent09(macros) {
    if (macros.GetFlag(DUNGEON, SEENRORY) == 0) {
        if (macros.GetFlag(PARTY, BEENHERE) == 0) {
            macros.SetFlag(PARTY, BEENHERE, 1);
            macros.ShowPicture(HALFLINGTHIEF);
            macros.ShowText("Rory's clothes are sweat stained, and his brow furrowed.  Still, a smile crosses his face as he greets you.");
            macros.ShowText("'Ah, 'tis good to have a chance for a breather, for this is a fractious place created by a devious and disturbed mind.");
            macros.ShowText("'It is called the Parapets, but insofar as I can determine it is a loathsome play on words, for many are the corners filled with pairs of groups of great beasts.");
            macros.ShowText("'I know not what manner of being keeps drakes, wolves, medusae, or minotaurs for pets, and I do not care to meet him.");
            macros.ShowText("'I can say this; the tongue of dog, tooth of wolf, and scale of dragon, have been most useful here.  But I have yet to find that which cows the medusae or minotaurs.");
            macros.ShowText("'I'm for the lower levels and regrouping.  Good luck, and watch thy back!'");
        }
        else {
            macros.ShowText("The howls of a hundred creatures echo through the parapets.");
        }
    }
    else {
        macros.ShowText("Once upon a time Rory gave you some good advice here, but his days as your adviser are ended.");
    }
}

