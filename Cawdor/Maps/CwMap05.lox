    i = macros.GetFlag(DUNGEON, BASINCTR);
    i++;
    if (i > 10) {
        i = 1;
    }
    if (macros.Here == 111) {
        macros.ShowText("Yup, that's a wash tub.");
    }
    else {
        macros.ShowText("Yup, that's a bath tub.");
    }
    if (i == 6) {
        macros.ShowText("All right, I know it's a picture of a fountain, but we didn't have the world's biggest art budget.  Work with me, people, work with me!");
    }
    macros.SetFlag(DUNGEON, BASINCTR, i);
    switch (i) {
        case 1:
            macros.ShowText("Fortunately your clothes got squeaky clean down in the dissolving pool.  Not to mention your skin!");
            break;
        case 2:
            macros.ShowText("You find a washer repairman, sobbing because it's just too low tech to break.");
            break;
        case 3:
            macros.ShowText("Well, that water does look awfully inviting, but your equipment might rust.");
            break;
        case 4:
            macros.ShowText("They must pay a lot to some dragons to heat up the water in here.");
            break;
        case 5:
            macros.ShowText("Why look!  You've never seen indoor running water before!  And considering 13th century hygiene, you can understand why water would want to flee from the likes of you.");
            break;
        case 6:
            macros.ShowText("You don't know about this.  Every time you see a quantity of steaming hot water that large, you can't but help worry that someone is planning a meal around adventurer soup.");
            break;
        case 7:
            macros.ShowText("Hey!  Nobody's gonna fool YOU that easily!  You know full well that there's an extra ten gold piece charge for the first person to use the hot water.");
            break;
        case 8:
            macros.ShowText("You wisely refuse to use any communal washing facilities 600 years before Marx invented communism.  You don't want to run any risks of getting blamed for anything, do you?");
            break;
        case 9:
            macros.ShowText("Judging from the smell, the last person to use this was a barbarian.  All thoughts of using it yourself before the next refill flee from your mind.");
            break;
        case 10:
            macros.ShowText("You're just glad you're not the one responsible for filling this thing!");
            break;
    }
}

fun MapEvent1B(macros) {
    if (macros.Facing == WEST) {
        macros.ShowText("This room has been mistreated so badly you have no idea what its purpose used to be.");
    }
}

fun MapEvent1C(macros) {
    if (macros.GetFlag(PARTY, SAWBATH) == 0) {
        macros.ShowText("This was, perhaps, the commanding officer's private bath.  The tile is good, and there is only one tub and one sink.  But it's just a guess.");
        macros.SetFlag(PARTY, SAWBATH, 1);
    }
    else {
        if (macros.Facing == SOUTH) {
            macros.ShowText("The bath tub still steams invitingly.");
        }
    }
}

fun MapEvent1D(macros) {
    macros.ShowText("You lament the chipped and cracked tile.  Why must vandals be so, well, vandalous?");
    if (macros.UsedSkill(DETECT_SKILL) >= 4 || macros.UsedSpell(TRUE_SEEING_SPELL) || macros.UsedItem(CRYSTALBALL, CRYSTALBALL) || macros.UsedItem(IVARSHELM, IVARSHELM) || macros.UsedItem(ANTLEREDHELM, ANTLEREDHELM) || macros.UsedItem(ALCUINSRING, ALCUINSRING) || macros.UsedItem(ALCUINSSTICKS, ALCUINSSTICKS)) {
        if (macros.GetFlag(DUNGEON, GOTKNIGHTGOLD) == 0) {
            macros.ShowText("You spot a loose tile.  After some effort, you pry it loose.  It appears whoever occupied this room decided to stash some cash here, just in case.");
            macros.SetFlag(DUNGEON, GOTKNIGHTGOLD, 1);
            macros.ModGold(833);
            macros.ShowText("You chuckle to yourself and decide it was here in case you came along.");
        }
        else {
            macros.ShowText("The loose tile is empty.");
        }
    }
}

fun MapEvent1E(macros) {
    if (macros.GetFlag(PARTY, SAWARMORY) == 0) {
        macros.ShowText("Maybe this was an armory.  Those poles could have been for polearms, those clumps of metal might have been arrowheads, and maybe those were swords.  Maybe.");
        macros.SetFlag(PARTY, SAWARMORY, 1);
    }
    else {
        macros.ShowText("The armory is as uninteresting as ever.");
    }
}

fun MapEvent1F(macros) {
    if (macros.GetFlag(PARTY, SAWTANNERY) == 0) {
        macros.ShowText("Mind you, there's nothing remaining that would give a clue, but from the rank odors that years of vacancy cannot remove, you suspect this once was a tannery.");
        macros.SetFlag(PARTY, SAWTANNERY, 1);
    }
}
