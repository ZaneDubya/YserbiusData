fun MapEvent02(macros) {
    macros.ShowPicture(TROLLKNIGHT);
    if (macros.GetFlag(DUNGEON, KNIGHTROOM) == 1) {
        if ((macros.GetFlag(PARTY, SAWDESK) == 0) && (macros.GetFlag(PARTY, BEENHERE) == 0)) {
            macros.ShowText("*");
            macros.ShowText("*");
            macros.ShowText("*");
            macros.ShowText("Roxanna greets you fondly.  'It speaks well of thee that thou dost return to diminish the population of rude and unchivalrous beings that have inhabited this place since thy last visit.  May fortune favor thee!");
            macros.SetFlag(PARTY, SAWDESK, 2);
        }
        else {
            if (macros.GetFlag(PARTY, SAWDESK) == 2) {
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("Roxanna greets you.  'Gentle sir, I can show my gratitude for thy aid in placating the foul inhabitants of this place.  I have an item which once daily grants me a powerful heal spell.'");
                macros.ShowText("You are healed!");
                macros.Heal(macros.MaxHealth);
                macros.SetFlag(PARTY, SAWDESK, 1);
                macros.ShowText("'Godspeed thee on thy missions here!'");
            }
            else {
                macros.ShowText("Roxanna nods as you pass, but says nothing.");
            }
        }
    }
    else {
        if ((!(macros.GetFlag(PARTY, WAR1) == 0)) && (!(macros.GetFlag(PARTY, WAR2) == 0)) && (!(macros.GetFlag(PARTY, WAR3) == 0)) && (!(macros.GetFlag(PARTY, WAR4) == 0)) && (!(macros.GetFlag(PARTY, WAR5) == 0)) && (!(macros.GetFlag(PARTY, WAR6) == 0)) && ((macros.GetFlag(DUNGEON, KNIGHTROOM) == 0) || (macros.GetFlag(PARTY, DONEROOM) == 1))) {
            macros.ShowText("*");
            macros.ShowText("*");
            macros.ShowText("*");
            macros.ShowText("'I salute thee, for thou hast proven thyself to be of gentle mien and noble heart.  I am pleased to grant thee an award which, mayhaps, will aid thee in thy future chivalric endeavors.");
            macros.GiveItem(SMALLLETTEROFCREDIT);
            macros.ModExp(4000);
            if ((macros.GetSkill(DEFLECT_MAGIC_SKILL) == 0) && (macros.Guild == KNIGHT)) {
                macros.ModSkill(DEFLECT_MAGIC_SKILL, 1);
                macros.ShowText("Roxanne draws you aside and whispers to you.");
                macros.ShowText("'Thou now knowest how to deflect magical assaults' she whispers.");
                macros.ShowText("She steps forward and speaks loudly again.");
            }
            if (macros.PartyGuild(KNIGHT)) {
                macros.ShowText("Roxanne draws your party's knights aside for a few private words, and then returns.");
            }
            macros.ShowText("She clasps your forearm, the old style of shaking hands.  'Now I must return to my duties.  Fare thee well!'");
            macros.SetFlag(DUNGEON, KNIGHTROOM, 1);
        }
        else {
            if ((!(macros.GetFlag(PARTY, WAR1) == 0)) && (!(macros.GetFlag(PARTY, WAR2) == 0)) && (!(macros.GetFlag(PARTY, WAR3) == 0)) && (!(macros.GetFlag(PARTY, WAR4) == 0)) && (!(macros.GetFlag(PARTY, WAR5) == 0)) && (!(macros.GetFlag(PARTY, WAR6) == 0))) {
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("'I appreciate thy efforts against the unholy creatures residing here, but I lack the means to reward thee for thy efforts.  This will have to suffice.'");
                macros.ModExp(1000);
                macros.GiveItem(SMALLLETTEROFCREDIT);
                macros.ShowText("'Thou art needed elsewhere.  Farewell....'");
                macros.Teleport(1, 1, 3, SOUTH);
            }
            else {
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("'I am Roxanna, the guardian of this gate.  I am charged to prevent the escape of the foul beasts that reside herein.  I thank thee for assisting me by battling the foul and fell beasts that live here.");
                macros.SetFlag(PARTY, SAWDESK, 1);
