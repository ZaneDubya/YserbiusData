fun MapEvent06(macros) {
    var i;
    i = 0;
    var k;
    k = 0;
    i = macros.GetFlag(PARTY, CTR);
    i++;
    k = i;
    if (k > 19) {
        k = (k - 20);
    }
    if (k > 14) {
        k = (k - 15);
    }
    if (k > 9) {
        k = (k - 10);
    }
    if (k > 4) {
        k = (k - 5);
    }
    if (k < 0) {
        k = 0;
    }
    if (k > 29) {
        k = 0;
    }
    if (i > 24) {
        i = 0;
    }
    macros.SetFlag(PARTY, CTR, i);
    if ((i == 26) | (i == 20) | (i == 14) | (i == 8) | (i == 2)) {
        switch (k) {
            case 0:
                macros.ShowPicture(HALFLINGTHIEF);
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("You see a heavily scarred and well equipped halfling striding confidently towards you.  He is wearing Gorgon's Gauntlets and carrying Macduff's Maul.");
                macros.ShowText("He says, 'Thou wouldst not think it to look at me, but singlehandedly have I slain sixteen giants, and I seek number seventeen.  Poach not on my self-appointed terrain, sir knight!'");
                macros.ShowText("You wisely decide to let him go his own way.");
                break;
            case 1:
                macros.ShowPicture(HALFLINGCLERIC);
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("A small but sturdy halfling knight greets you.");
                macros.ShowText("'Good morning, neighbor.  I am sworn to vengeance against Magog, a giant who has terrorised one halfling village too many.  To defeat him, I seek Swithun's Staff?  Know you where I might find one?'");
                macros.ShowText("You shake your head.  He sighs and wanders off.");
                break;
            case 2:
                macros.ShowPicture(HALFLINGKNIGHT);
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("A small, smiling halfling knight, carrying a Lozenge Spear, greets you.");
                macros.ShowText("'What ho!  Fellow knight, art thou sworn against the tall, that is to say, art thou on a quest against giantkind?'");
                macros.ShowText("You politely indicate that you are not.");
                macros.ShowText("'Very well, then, but an thou findest one so pledged, do send him to me!'  The halfling walks off.");
                break;
            case 3:
                macros.ShowPicture(DWARFWIZARD);
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("A dwarf holds up her hand in greeting.");
                macros.ShowText("'I say, friend!  I am in a bit of a bother.");
                macros.ShowText("Knowest thou whether the Antlered Helm or Ironside's Headgear is the more effective defense against giants?  I have both and I must decide which to use.'");
                macros.ShowText("You tell her you don't know.");
                macros.ShowText("'Ah, well, empirical evidence it must be, then.'  She departs.");
                break;
            case 4:
                macros.ShowText("This must be the main minotaur migration mob!");
                macros.GetMonster(1, 15);
                if (macros.PartyCount > 2) {
                    macros.GetMonster(2, 23);
                }
                if (macros.PartyCount > 3) {
                    macros.GetMonster(3, 40);
                    macros.GetMonster(4, 40);
                }
                break;
        }
    }
}

