fun MapEvent07(macros) {
    macros.NoJoin;
    if (macros.PartyCount > 1) {
        macros.ShowText("You try squeezing down this narrow corridor, but it's so tight that - aargh!  You've been impaled on your companion's weapon!");
        macros.Damage(macros.MaxHealth);
    }
    else {
        if (macros.GetFlag(DUNGEON, SEENGALATEA0502) == 0) {
            macros.SetFlag(DUNGEON, SEENGALATEA0502, 1);
            macros.ShowText("Galatea greets you. 'Thou hast matched my hopes and exceeded my expectations, and earned thereby many rewards.  I shall begin by granting thee abilities and experience.'");
            if (((macros.Guild == WIZARD) || (macros.Guild == THIEF)) && (macros.GetSkill(DEFLECT_MAGIC_SKILL) == 0)) {
                macros.ShowText("'As thy foes grow ever more canny and cunning, thou shouldst know how to minimize the damage from their spells.'  You now know how to deflect magic!");
                macros.ModSkill(DEFLECT_MAGIC_SKILL, 1);
            }
            if ((macros.Guild == BARBARIAN) && (macros.GetSkill(BINDING_SKILL) == 0)) {
                macros.ShowText("'Child of nature, thou wilt find it easy to learn and to use a skill of natural healing, of binding thy own wounds or those of thy companions.Behold!'  You know the binding skill!");
                macros.ModSkill(BINDING_SKILL, 1);
            }
            if (((macros.Guild == CLERIC) && (macros.GetSkill(DEEP_TRANCE_SKILL) == 0))) {
                macros.ShowText("'As thou dost learn more puissant and costly spells, so shouldst thou also know better how to replenish the mana on which thou dost draw to cast them.  Behold!'  You now know how to enter a deep trance!");
                macros.ModSkill(DEEP_TRANCE_SKILL, 1);
            }
            if (((macros.Guild == KNIGHT) || (macros.Guild == RANGER)) && (macros.GetSkill(ATHLETICS_SKILL) == 0)) {
                macros.ShowText("'As thou must face ever greater evils, thou shouldst know better how to use thy body, both to cause damage and to avoid damage.  Behold!'  You now know the athletics skill!");
                macros.ModSkill(ATHLETICS_SKILL, 1);
            }
            if (macros.GetSkill(RUNE_READING_SKILL) == 0) {
                macros.ShowText("'I must speak plain, for thou hast avoided the meaning I tried to impart thee before.");
                macros.ShowText("There is a fountain in the Foyer.  An thou dost enter it thrice, then thou shalt be granted the skill of reading runes.  That skill will prove most educational an thou dost ply it in The Runed Room.'");
                macros.ModExp(300000);
            }
            else {
                if (macros.GetFlag(DUNGEON, BEENINRUNEDROOM) == 0) {
                    macros.ShowText("'I am most pleased that thou didst learn the secret of the Runed Fountain.");
                    macros.ShowText("For the skill thou hast shown at deciphering my riddles I do grant thee an extra portion of experience I withhold from thy less persistent comrades.  But I refer thee to study of The Runed Room.'");
                    macros.ModExp(600000);
                }
                else {
                    macros.ShowText("'Thou hast been truly diligent in thy pursuit of knowledge and the study of runes.  I am most pleased with thee, and do grant thee a reward commensurate with my pleasure.'");
                    macros.ModExp(900000);
                }
            }
            macros.ShowText("'On this level is The Library.  Not all the wisdom in The Library is obvious, either to find or to decipher.  But there is much to learn about the hidden powers of certain objects, an thou dost invest the effort.");
            macros.ShowText("Also hereon is Malcolm's Ghost, who will not be as easily cowed as was Fleance.'");
            if (macros.GetFlag(DUNGEON, GOT_BLAST) == 0) {
                macros.ShowText("'To survive and thrive on these more difficult levels, thou shouldst know ever mightier spells.  I hereby grant thee the spell known, simply, as Blast.'");
                macros.GiveSpell(BLAST_SPELL, 3);
                macros.SetFlag(DUNGEON, GOT_BLAST, 1);
            }
            macros.ShowText("Galatea gets a distant look in her eyes.  'I dare no longer stay.  Good fortune!'  She disappears.");
        }
        else {
            if (macros.GetFlag(DUNGEON, GFIGHT0502) == 0) {
                macros.ShowText("It looks like someone is investigating yourmeeting with Galatea here earlier!");
                macros.SetFlag(DUNGEON, GFIGHT0502, 1);
                macros.GetMonster(1, 22);
                macros.GetMonster(5, 24);
            }
        }
    }
}

