fun MapEvent05(macros) {
    var i;
    i = 0;
    var k;
    k = 0;
    i = macros.GetFlag(PARTY, CTR);
    i++;
    k = i;
    if (k > 19) {
        k = (k - 20);
    }
    if (k > 14) {
        k = (k - 15);
    }
    if (k > 9) {
        k = (k - 10);
    }
    if (k > 4) {
        k = (k - 5);
    }
    if (k < 0) {
        k = 0;
    }
    if (k > 29) {
        k = 0;
    }
    if (i > 30) {
        i = 0;
    }
    macros.SetFlag(PARTY, CTR, i);
    if ((i == 26) | (i == 20) | (i == 14) | (i == 8) | (i == 2)) {
        switch (k) {
            case 0:
                macros.ShowText("You hear some folks walking towards you.");
                macros.ShowPicture(HALFLINGKNIGHT);
                macros.ShowText("'Pardon us, good gentles.  We seek a multi-headed hydra we have heard tell was to be found hereabouts.  We need a a baritone and soprano for our choir, and can only afford to pay one more person.  Knowest thou where the hydra can be found?'");
                macros.ShowText("You tell her you cannot help her.");
                macros.ShowText("'Oh.'  She droops and rejoins her troop.  As they wander off, you hear one of them say, 'I still say that if the medusa's snakes could whistle in turn, then she would suffice!'  You see the others beating at the speaker with their hats as they round a corner.");
                break;
            case 1:
                macros.ShowText("You hear someone running towards you.");
                macros.ShowPicture(HUMANWIZARD);
                macros.ShowText("An obviously perturbed human wizard runs toward you.");
                macros.ShowText("'As thou values thy life!  Leave this place, lest sweet reason leave thee.  Augh!  The bagpipes echo yet in my brain!'");
                macros.ShowText("He runs off, clutching his ears.");
                break;
            case 2:
                macros.ShowPicture(DRAGON);
                macros.ShowText("The dragon greets you heartily.");
                macros.ShowText("'Ah!  Thou art one of those small two legged folks.  I heard that one of thy ilk seeks a dragon to provide wind for a pipe organ.  Art thou the one?'");
                macros.ShowText("You politely inform the dragon that you do not wish him to play with your organs, and wish him luck in finding employment.");
                break;
            case 3:
                if (macros.GetFlag(DUNGEON, SEENRORY) == 1) {
                    macros.ShowText("Never again will Rory play a tune in this room or any other.");
                }
                else {
                    macros.ShowPicture(HALFLINGTHIEF);
                    macros.ShowText("'Well met, gentle beings.  I have found many undead hereabouts, but as thou hast already heard, I am well equipped with items proof against the undying.");
                    macros.ShowText("Oh, and tread softly in the auditorium, lest the organ begin its tune of death.");
                    macros.ShowText("The halfling struts off, smiling.");
                }
                break;
            case 4:
                macros.ShowPicture(GREMLINWIZARD);
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("A slew of short sorcerors decide that you are an easier target than the undead.");
                macros.SetBooty(LARGELETTEROFCREDIT, DEERHORNEDHELM, 0, 0, 0, 293);
                macros.GetMonster(1, 28);
                if (macros.PartyCount > 1) {
                    macros.GetMonster(5, 28);
                }
                if (macros.PartyCount > 2) {
                    macros.GetMonster(2, 28);
                    macros.GetMonster(6, 28);
                }
                break;
        }
    }
}

