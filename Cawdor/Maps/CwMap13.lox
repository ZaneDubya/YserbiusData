fun MapEvent20(macros) {
    macros.ShowPicture(ELFCLERIC);
    if (macros.GetFlag(PARTY, SAWELFCLERIC) == 0) {
        macros.SetFlag(PARTY, SAWELFCLERIC, 1);
        macros.ShowText("'Gadzooks, but it has been an interminable wait here.  I have already finished exploring the Ballroom and the Music Room, and I hope I do not have to wait all knight to get into the Cloak Room.'");
