        context.ShowText("Guardians of the Gateway are summoned to its defense as you attempt to gain access to its secrets.");
        context.GetMonster(1, QUEENSGUARDONE);
        context.GetMonster(2, QUEENSGUARDTWO);
        context.GetMonster(3, QUEENSGUARDTHREE);
        context.GetMonster(4, QUEENSGUARDFOUR);
        context.GetMonster(5, DRAKSNUMBER);
    }
}

