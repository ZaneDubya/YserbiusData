fun MapEvent15(macros) {
    var i;
    i = 0;
    var k;
    k = 0;
    i = macros.GetFlag(PARTY, CTR);
    i++;
    k = i;
    if (k > 19) {
        k = (k - 20);
    }
    if (k > 14) {
        k = (k - 15);
    }
    if (k > 9) {
        k = (k - 10);
    }
    if (k > 4) {
        k = (k - 5);
    }
    if (k < 0) {
        k = 0;
    }
    if (k > 29) {
        k = 0;
    }
    if (i > 30) {
        i = 0;
    }
    macros.SetFlag(PARTY, CTR, i);
    if ((i == 26) | (i == 20) | (i == 14) | (i == 8) | (i == 2)) {
        switch (k) {
            case 0:
                macros.ShowText("You hear some footsteps running away.");
                break;
            case 1:
                if (macros.GetFlag(PARTY, SAWCLERIC) == 2) {
                    macros.ShowText("You see a ghoul dragging a corpse.  It decides it likes dead meat better than live, and runs off.");
                }
                if (macros.GetFlag(PARTY, SAWCLERIC) == 1) {
                    macros.ShowText("You find the body of the panicked elf cleric, drained of its blood.  There was reason to panic after all.");
                    macros.SetFlag(PARTY, SAWCLERIC, 2);
                }
                if (macros.GetFlag(PARTY, SAWCLERIC) == 0) {
                    macros.ShowText("You hear someone running towards you.");
                    macros.ShowPicture(ELFCLERIC);
                    macros.ShowText("*");
                    macros.ShowText("*");
                    macros.ShowText("*");
                    macros.ShowText("'By all the saints, thou must know this! We fought the vampires here, and one of us, wielding Malcolm's Chopper, harmed it, but not as much as the Hunting Bow or Oswald's Bane.  My comrades there lie dead.  I dare no longer stay.'");
                    macros.ShowText("The cleric departs, rapidly.");
                    macros.SetFlag(PARTY, SAWCLERIC, 1);
                }
                break;
            case 2:
                macros.ShowPicture(DRAGON);
                macros.ShowText("The dragon examines you with a baleful eye.  It has seen better days.");
                macros.ShowText("'Thou art living, and I am desperate.  I must have a petunia poultice.  I will pay well for one.'");
                if (macros.HasItem(PETUNIAPOULTICE)) {
                    macros.TakeItem(PETUNIAPOULTICE);
                    macros.ModGold(5500);
                    macros.ShowText("'I thank thee, and give thee enough to buy ten more to replace that which I have taken.  Fare thee well!'");
                }
                else {
                    macros.ShowText("'Thou hast none?  I can see the truth in thee.  An thou dost find one, thou wilt be well rewarded to find me with it.  Fare thee well.'");
                }
                break;
            case 3:
                if (macros.GetFlag(DUNGEON, SEENRORY) == 1) {
                    macros.ShowText("It was here that Rory taught you about the Gaelic Garlic's power against undead.  You know not whether the tear in your eye is from the memory or from a faint residue of the pungent bud.");
                }
                else {
                    macros.ShowPicture(HALFLINGTHIEF);
                    macros.ShowText("*");
                    macros.ShowText("*");
                    macros.ShowText("*");
                    macros.ShowText("The thief looks somewhat bruised.");
                    macros.ShowText("'Ah! 'Tis my friends, not more of these thrice bedamned undead.  I must say, My Lady's Favor is well and good, as is the Thief's Tabard and the Gaelic Garlic, but none match the power of the Holy Relic against them.  Would that I had one!  May fortune favor thee.'");
                    macros.ShowText("The halfling limps off, smiling grimly.");
                }
                break;
            case 4:
                macros.ShowPicture(GREMLINTHIEF);
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("*");
                macros.ShowText("A slew o'Slyfeet decide, rather insultingly, that they are bigger than you are.");
                macros.SetBooty(SMALLLETTEROFCREDIT, LEFTARMSCROLL, 0, 0, 0, 147);
                macros.GetMonster(1, 1);
                if (macros.PartyCount > 1) {
                    macros.GetMonster(5, 2);
                }
                if (macros.PartyCount > 2) {
                    macros.GetMonster(2, 1);
                    macros.GetMonster(6, 2);
                }
                break;
        }
    }
}

